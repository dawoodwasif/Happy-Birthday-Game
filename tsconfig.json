{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowUnreachableCode": false,
		"sourceMap": true,
		"strictPropertyInitialization": false,
		"typeRoots": [
			"node_modules/@types",
			"src/typings"
		],
		"lib": [
			"dom",
			"es5",
			"esnext",
			"scripthost"
		],
		"baseUrl": "./",
		"paths": {
			"@src/*": [
				"src/*"
			]
		},
		"allowJs": true,
		"checkJs": false
	},
	"include": [
		"src/**/*.ts"
	]
}