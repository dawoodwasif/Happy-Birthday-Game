{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"types": [], // Don't include any @types/* packages by default
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"src/assets/**/*.tsx", // Exclude Tiled map editor files
		"src/assets/tilemaps/**" // Exclude all tilemap files
	]
}